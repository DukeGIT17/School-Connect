@{
    ViewData["Title"] = "Chat Screen";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/ChatCSS/Chat.css" />
</head>
<body>

    <div class="app-bar">
        <!-- Uncomment this line if you want the back button visible -->
        <!-- <button onclick="goBack()" style="background:none;border:none;color:white;">
            &#8592; Back arrow
        </button> -->
        <h1 class="app-bar-title">@ViewData["Title"]</h1>
        <button onclick="toggleMenu()" style="background:none;border:none;color:white;">
            &#8942; <!-- More options icon -->
        </button>
    </div>

    <div class="subject-container">
        <button class="subject-button" onclick="showSubjectDialog()">
            <i>&#8942;</i>
            <span>Subject: Enquire</span>
        </button>
    </div>

    <div class="chat-container" id="chat-container">
        <div class="chat-message me">
            <div class="chat-bubble me">Hello! How can I assist you today?</div>
        </div>
        <div class="chat-message not-me">
            <div class="chat-avatar">B</div>
            <div class="chat-bubble not-me">How are you?</div>
        </div>
        <!-- Add more chat messages here -->
    </div>

    <div class="message-input-container">
        <input type="text" class="message-input" placeholder="Type a message">
        <button class="send-button" onclick="sendMessage()">&#9658;</button>
    </div>

    <script>
        function goBack() {
            // Add back navigation functionality here
            alert("Back button pressed!");
        }

        function toggleMenu() {
            // Add toggle menu functionality here
            alert("Menu button pressed!");
        }

        function showSubjectDialog() {
            // Add subject selection dialog functionality here
            alert("Subject selection pressed!");
        }

        function sendMessage() {
            // Add send message functionality here
            const messageInput = document.querySelector('.message-input');
            const message = messageInput.value;
            if (message) {
                const chatContainer = document.getElementById('chat-container');
                const newMessage = document.createElement('div');
                newMessage.className = 'chat-message me';
                newMessage.innerHTML = `<div class="chat-bubble me">${message}</div>`;
                chatContainer.appendChild(newMessage);
                messageInput.value = '';
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        }
    </script>

</body>
</html>
