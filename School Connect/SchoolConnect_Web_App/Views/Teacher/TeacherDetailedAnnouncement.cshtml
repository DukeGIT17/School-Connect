@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/TeacherCSS/TeacherDetailedAnnouncement" />

<body>
    <!-- Header Section -->
    <header>
        <h1>School Announcements</h1>
    </header>

    <!-- Content Section -->
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="announcement-list">
                @foreach (var announcement in Model)
                {
                    <div class="announcement-card">
                        <div class="announcement-title">@announcement.Title</div>
                        <div class="announcement-date">Posted on: @announcement.Date.ToString("MMMM dd, yyyy")</div>
                        <div class="announcement-content">@announcement.Content</div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-announcements">There are no announcements available at this time.</p>
        }
    </div>

    <!-- Footer Section -->
    <footer>
        <p>&copy; @DateTime.Now.Year Your School Name. All Rights Reserved.</p>
    </footer>
</body>
