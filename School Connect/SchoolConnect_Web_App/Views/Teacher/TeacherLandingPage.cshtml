@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/css/TeacherCSS/TeacherLandingPage.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container">
    <div class="header">
        <div class="title">@ViewData["Title"]</div>
    </div>

    <div class="profile-info">
        <div class="profile-icon">
            <i class="fas fa-user"></i>
        </div>
        <div class="title">Mr Kgopolo Mooi</div>

        <a asp-controller="Teacher" asp-action="TeacherViewProfile" class="button">View Profile</a>
        <a asp-controller="Teacher" asp-action="TeacherMakeAnnouncements" class="button">Make Announcements</a>
        <a asp-controller="Teacher" asp-action="TeacherViewAnnouncements" class="button">View Announcements</a>
        <a asp-controller="Teacher" asp-action="TeacherClassRoaster" class="button">Class Roaster</a>

        <div class="title">Subjects:</div>
        <a asp-controller="Teacher" asp-action="TeacherViewGrades" class="button">GEOGRAPHY</a>
        <a asp-controller="Teacher" asp-action="TeacherViewGrades" class="button">ENGLISH</a>
        <a asp-controller="Teacher" asp-action="TeacherViewGrades" class="button">LIFE ORIENTATION</a>

        <button class="button" onclick="logout()">LOGOUT</button>
    </div>
</div>

