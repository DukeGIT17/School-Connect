@model PassWithTeacherIdViewModel<IEnumerable<Grade>>
@{
    Layout = null;
}
<link rel="stylesheet" href="~/FontAwesome/css/all.min.css" />
<link rel="stylesheet" href="~/css/TeacherCSS/TeacherViewGrades.css" />


<header>
    <div class="header-section">
        <h1><i class="fas fa-school"></i> Teacher's Grade Overview</h1>
    </div>
</header>

<div class="container">
    
    @foreach (var grade in Model.ActualModel)
    {
        <div class="grade-section">
            <h2>Grade @grade.GradeDesignate</h2>
            <div class="grade-buttons">
                @foreach (var cls in grade.Classes)
                {
                    <a asp-action="TeacherSubjectPage" asp-route-classId="@cls.Id" asp-route-teacherId="@Model.TeacherId" class="button">@cls.ClassDesignate</a>
                }
            </div>
        </div>
    }
</div>
