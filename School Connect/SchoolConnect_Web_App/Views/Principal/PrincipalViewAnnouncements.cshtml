@model IEnumerable<Announcement>
@{
    Layout = null;
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/css/PrincipalCSS/PrincipalViewAnnouncements.css" />
<link rel="stylesheet" href="~/FontAwesome/css/all.min.css">
<link rel="stylesheet" href="~/FontAwesome/css/all.css">

<div id="header">
    <h1>
        <i class="fas fa-bullhorn"></i>
        Announcements
    </h1>
</div>

<body>
    <div class="container">
        @* <a asp-action="PrincipalDetailedAnnouncements" asp-controller="Principal">Go To Detailed Announcement</a> *@
        <div class="search">
            <div class="total">Total:12</div>
            <div class="icon"><i class="fa-solid fa-magnifying-glass"></i></div>
        </div>

        @foreach (var value in Model)
        {
            <div class="announcement">
                @if (value.PrincipalID is not null)
                {
                    <i class="fa-regular fa-circle-check icon"></i>
                    <div class="details">
                        <h4 class="title">@value.Title</h4>
                        <div class="content">@value.Content</div>
                    </div>
                    <a asp-action="PrincipalDetailedAnnouncement" asp-route-id="@value.AnnouncementId" style="display:none;"></a>
                    <a asp-action="DeleteAnnouncement" asp-route-id="@value.AnnouncementId" asp-route-principalId="@value.PrincipalID">
                        <i class="fa-regular fa-trash-can"></i>
                    </a>
                }
                else
                {
                    <i class="fa-regular fa-circle"></i>
                    <div class="details">
                        <h4 class="title">@value.Title</h4>
                        <div class="content">@value.Content</div>
                    </div>
                    <i class="fa-regular fa-trash-can opaque"></i>
                }
            </div>
        }
    </div>
</body>

<script src="~/js/Principal/PrincipalViewAnnouncement.js"></script>



