@model Principal
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/PrincipalCSS/PrincipalViewProfile.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="card">
    <div class="left-container">
        <div class="profile-image">
            <div class="icon"><i class="fas fa-user"></i></div>
        </div>
        <h2 class="gradienttext">@Model.Name @Model.Surname <br /> @Model.Role</h2>
        <a asp-action="PrincipalUpdateDetails" class="UpdateButton">Update</a>
    </div>
    <div class="right-container">
        <h3>Profile Details</h3>
        <table>
            <tr>
                <td>@Html.DisplayNameFor(s => s.Name)</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(s => s.Surname)</td>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(s => s.StaffNr)</td>
                <td>@Model.StaffNr</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(s => s.PrincipalSchoolNP!.EmisNumber)</td>
                <td>@Model.PrincipalSchoolNP!.EmisNumber</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(s => s.PhoneNumber)</td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(s => s.EmailAddress)</td>
                <td>@Model.EmailAddress</td>
            </tr>
        </table>
    </div>
</div>