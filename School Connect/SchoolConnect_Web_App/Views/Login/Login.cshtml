@model LoginModel

<link rel="stylesheet" href="~/css/LoginCSS/Login.css" />
<form asp-controller="Login" asp-action="Login" class="container">
    <img src="~/images/logo.png" alt="Logo" class="logo">
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" id="email" placeholder="Enter your email here">
        <span asp-validation-for="EmailAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" id="password" placeholder="Enter your password here">
    </div>
    <button type="submit" class="button">Login</button>
</form>

<script>
    function login() {
        // Navigate to the designated user account
        window.location.href = '/LogInReg/sLogin.html'; // Adjust the URL as needed
    }
</script>

