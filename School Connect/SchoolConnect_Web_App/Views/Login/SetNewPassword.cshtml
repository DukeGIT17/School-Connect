@model LoginModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/LoginCSS/SetNewPassword.css" />

<div class="container">
    <form asp-action="SetNewPassword">
        <img src="~/images/logo.png" alt="Logo" class="logo">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" placeholder="Enter your email here">
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Old Password</label>
            <input asp-for="Password" placeholder="Enter your old password here">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" placeholder="Enter your new password here">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" placeholder="Confirm your new password here" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <button class="button">Change Password</button>
    </form>
</div>
