@model Parent
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/ParentCSS/ParentViewProfile.css" />
<link rel="stylesheet" href="~/FontAwesome/css/all.min.css" />

<div class="card">
    <div class="left-container">
        <div class="profile-image">
            <div class="icon">
                <i class="fas fa-user"></i>
            </div>
        </div>
        <h2 class="gradienttext">@Model.Name @Model.Surname</h2>
        <h2>@Model.Role</h2>
        <a asp-action="ParentUpdateDetails" asp-route-parentId="@Model.Id" class="UpdateButton">Update</a>
    </div>
    <div class="right-container">
        <h3>Profile Details</h3>
        <table>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Title)</td>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Name)</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(n => n.Surname)</td>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(i => i.IdNo)</td>
                <td>@Model.IdNo</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(i => i.ParentType)</td>
                <td>@Model.ParentType</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(e => e.PhoneNumber)</td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(e => e.EmailAddress)</td>
                <td>@Model.EmailAddress</td>
            </tr>
        </table>
    </div>
</div>
