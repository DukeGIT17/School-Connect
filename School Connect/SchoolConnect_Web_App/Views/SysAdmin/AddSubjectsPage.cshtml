@model SubjectsViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/SysAdminCSS/AddSubjectsPage.css" />

<div class="container">
    <form asp-action="AddSubjectsPage" method="post">
        @for (int i = 0; i < Model.Subjects.Count; i++)
        {
            <label>Subject @i</label>
            <input asp-for="Subjects[i]" type="text" class="input-fields" />
        }
        <input asp-for="SchoolId" type="hidden" />
        <input asp-for="AdminId" type="hidden" />
        <input asp-for="Destination" type="hidden" />
        <input asp-for="NewClasses" type="hidden" />
        <button type="submit">Submit</button>
    </form>
</div>
