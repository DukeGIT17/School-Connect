@model School
<link rel="stylesheet" href="~/css/SysAdminCSS/SchoolReg.css" />
<link rel="stylesheet" href="~/FontAwesome/css/all.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

@{
    Layout = null;
}

<div class="container">
    <div class="icon">
    <i class="fa-solid fa-school" ></i>
    </div>
    <br />

    <form asp-action="SysAdminLandingPage" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" id="schoolName" placeholder="School Name">
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmisNumber"></label>
            <input asp-for="EmisNumber" id="emisNumber" placeholder="EMIS Number">
        </div>

        <div class="form-group">
            <label asp-for="Type"></label>
            <select asp-for="Type">
                <option value="Primary" selected>Primary School</option>
                <option value="High">High School</option>
                <option value="Combined">Combined School</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Telephone" >Telephone Number:</label>
            <input type="text" id="telephoneNumber" name="telephoneNumber" placeholder="Telephone Number" required>
        </div>

        <div class="form-group">
            <label for="emailAddress">Email Address:</label>
            <input type="text" id="emailAddress" name="emailAddress" placeholder="Email Address" required>
        </div>

        <!--Physical Address-->
        <div class="form-group">
            <label for="physicaladdress">Physical Address:</label><br>
            <input type="text" id="address1" name="address1" placeholder="Address 1" required>
        </div>

        <!-- Address 2 -->
        <div class="form-group">
            <input type="text" id="address2" name="address2" placeholder="Address 2" required>
        </div>

        <!-- City -->
        <div class="form-group">
            <input type="text" id="city" name="city" placeholder="City" required>
        </div>

        <!-- Province and Postal Code -->
        <div class="form-group row">
            <div>
                <input type="text" id="province" name="province" placeholder="Province" required>
            </div>
            <br>
            <div>
                <input type="text" id="postal-code" name="postal-code" placeholder="Postal Code" required>
            </div>
        </div>
        <!--Postal Address-->
        <div class="form-group">
            <label for="postalAddress">Postal Address:</label><br>
            <input type="text" id="address1" name="address1" placeholder="Address 1" required>
        </div>

        <!-- Address 2 -->
        <div class="form-group">
            <input type="text" id="address2" name="address2" placeholder="Address 2" required>
        </div>
        <!--District-->
        <div class="form-group">
            <input type="text" id="district" name="district" placeholder="District" required>
        </div>

        <!-- City -->
        <div class="form-group">
            <input type="text" id="city" name="city" placeholder="City" required>
        </div>

        <!-- Province and Postal Code -->
        <div class="form-group row">
            <div>
                <input type="text" id="province" name="province" placeholder="Province" required>
            </div>
            <br>
            <div>
                <input type="text" id="postal-code" name="postal-code" placeholder="Postal Code" required>
            </div>
        </div>

        <a asp-controller="SysAdmin" asp-action="SysAdminLandingPage" class="button">REGISTER</a>
    </form>
    
</div>

@section Scripts {
    <script>
        function register() {
            alert('You have successfully registered your school');
            document.getElementById('emisNumber').value = '';
            document.getElementById('schoolName').value = '';
            document.getElementById('address').value = '';
            window.location.href = '/Accounts/systemAdmin2';
        }
    </script>
}
