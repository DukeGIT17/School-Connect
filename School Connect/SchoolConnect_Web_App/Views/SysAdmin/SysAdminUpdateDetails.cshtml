@model SysAdmin
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/SysAdminCSS/SysAdminUpdateDetails.css" />


<div class="card">
    <div class="container">
        <h3> Update Profile Details</h3>
        <table>
            <form asp-action="SysAdminUpdateDetails" method="post">
                <input asp-for="Id" type="hidden" />
                <input asp-for="ProfileImage" type="hidden" />
                <input asp-for="ProfileImageFile" type="hidden" />
                <input asp-for="Title" type="hidden" />
                <input asp-for="Name" type="hidden" />
                <input asp-for="Surname" type="hidden" />
                <input asp-for="Gender" type="hidden" />
                <input asp-for="Role" type="hidden" />
                <input asp-for="StaffNr" type="hidden" />
                <input asp-for="EmailAddress" type="hidden" />
                <input asp-for="PhoneNumber" type="hidden" />

                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" id="contactNumber" placeholder="Enter your contact number" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" id="email" placeholder="Enter your email address" >
                    <span asp-validation-for="EmailAddress"></span>
                </div>

                <button type="submit" class="btn">Update Profile</button>
            </form>
        </table>
    </div>
</div>
