@model SysAdmin
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/SysAdminCSS/SysAdminLandingPage.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<div class="container">
    <div class="icon"><i class="fas fa-user"></i></div>
    <h2>@Model.Name @Model.Surname</h2>
    <div class="form-group-1">
        <a asp-action="SysAdminViewProfile" asp-route-id="@Model.Id" class="button">View Profile</a>
    </div>
    <br />
    <br />
    <div class="form-group">
        <a asp-action="SchoolReg" asp-route-id="@Model.Id" class="button">Register School</a>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="RolesReg" asp-route-id="@Model.Id" class="button">Register Roles</a>
    </div>
    <br />
    <br />
    <br />
    <a asp-controller="Login" asp-action="Login" class="logout-button">LOGOUT</a>
</div>

