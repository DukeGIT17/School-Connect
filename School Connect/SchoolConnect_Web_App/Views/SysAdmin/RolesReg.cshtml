@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roles Registration</title>
    <link rel="stylesheet" href="~/css/SysAdminCSS/RolesReg.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="icon"><i class="fas fa-user"></i></div>

        <div class="input-group">
            <label for="idNum">Identity Number</label>
            <input type="text" id="idNum" placeholder="Enter Identity Number">
        </div>

        <div class="input-group">
            <label for="title">Title</label>
            <select id="title">
                <option value="Mr">Mr</option>
                <option value="Mrs">Mrs</option>
                <option value="Ms">Ms</option>
                <option value="Miss">Miss</option>
            </select>
        </div>

        <div class="input-group">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" placeholder="Enter First Name">
        </div>

        <div class="input-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" placeholder="Enter Last Name">
        </div>

        <div class="input-group">
            <label for="gender">Gender</label>
            <select id="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>

        <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Enter Email">
        </div>

        <div class="input-group">
            <label for="password">Default Password</label>
            <input type="password" id="password" placeholder="Enter Default Password">
        </div>

        <div class="input-group">
            <label for="emisNumber">School EMIS Number</label>
            <input type="text" id="emisNumber" placeholder="Enter School EMIS Number">
        </div>

        <div class="input-group">
            <label for="role">Role</label>
            <select id="role" onchange="toggleSubjects(this.value)">
                <option value="Teacher">Teacher</option>
                <option value="Parent">Parent</option>
                <option value="Principal">Principal</option>
                <option value="Guardian">Guardian</option>
            </select>
        </div>

        <div id="subjectSelect" class="subject-select" style="display: none;">
            <label for="subjects">Select Subjects</label>
            <select id="subjects" multiple>
                <option value="English">English</option>
                <option value="Mathematics">Mathematics</option>
                <option value="Social Sciences">Social Sciences</option>
                <option value="Economics">Economics</option>
                <option value="Afrikaans">Afrikaans</option>
                <option value="Life Orientation">Life Orientation</option>
                <option value="Life Skills">Life Skills</option>
            </select>
        </div>

        <a asp-controller="SysAdmin" asp-action="SysAdminLandingPage" class="button">REGISTER</a>
    </div>

    @section Scripts {
        <script>
            function toggleSubjects(role) {
                const subjectSelect = document.getElementById('subjectSelect');
                subjectSelect.style.display = role === 'Teacher' ? 'block' : 'none';
                    }
        </script>
    }
</body>
</html>



